<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>


<AnchorPane prefHeight="523.0" prefWidth="768.0" style="-fx-background-color: #4e0040;" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.ui.CommentController">
   <children>
      <TextArea fx:id="showProductInfo" layoutX="39.0" layoutY="37.0" prefHeight="200.0" prefWidth="691.0" text="Here we show the product info and the comment for you!!&#10;Please type id of product in box!!">
         <font>
            <Font name="Forte" size="13.0" />
         </font>
      </TextArea>
      <TextField fx:id="stringComment" layoutX="255.0" layoutY="357.0" prefHeight="68.0" prefWidth="258.0" />
      <Button fx:id="checkProduct" layoutX="327.0" layoutY="287.0" mnemonicParsing="false" onAction="#checkProductFunc" text="Check Product">
         <font>
            <Font name="Lucida Sans Demibold Italic" size="13.0" />
         </font>
      </Button>
      <Button fx:id="saveComment" layoutX="256.0" layoutY="425.0" mnemonicParsing="false" onAction="#saveCommentFunc" text="comment">
         <font>
            <Font name="Lucida Sans Demibold Italic" size="13.0" />
         </font>
      </Button>
      <Button fx:id="deleteStringComment" layoutX="455.0" layoutY="425.0" mnemonicParsing="false" onAction="#deleteStringComment" text="delete">
         <font>
            <Font name="Lucida Sans Demibold Italic" size="13.0" />
         </font>
      </Button>
      <TextField fx:id="checkProductInput" layoutX="310.0" layoutY="253.0" />
      <ImageView fx:id="imageComment" fitHeight="47.0" fitWidth="47.0" layoutX="256.0" layoutY="311.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@comment2.png" />
         </image>
      </ImageView>
      <Button fx:id="backFromComment" layoutX="704.0" layoutY="484.0" mnemonicParsing="false" onAction="#backFromCommentFunc" text="Back">
         <font>
            <Font name="Lucida Sans Demibold Italic" size="13.0" />
         </font>
      </Button>
   </children>
</AnchorPane>
